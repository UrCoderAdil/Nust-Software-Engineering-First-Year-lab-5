// ***
//*****
#include <iostream>
int main(){
    int row,column,i=0;
    std::cout<<"Enter the number of row for the pattern : ";
    std::cin>>row;

    while(i<row){
        int j=0,k=0;
        while(j < row - i - 1){
            std::cout<<" ";
            j++;
        }
        while (k < 2*i+1){
            std::cout<<"*";
            k++;
        }
        std::cout<<"\n";
        i++;
    }
            Return 0;
}
